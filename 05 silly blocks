class Silly_blocks

	def some_silly_block_functions

		def reverser

			puts "reverses the string returned by the default block"
				result = reverser
					"hello"
				result == "olleh"


			puts "reverses each word in the string returned by the default block"
				result = reverser
					"hello dolly"
				result == "olleh yllod"



		def adder

			puts "adds one to the value returned by the default block"
				adder
					5
				end == 6

			puts "adds 3 to the value returned by the default block"
				adder(3)
					5
				end == 8



		def repeater

			puts "it executes the default block"
				block_was_executed = false
					repeater
				block_was_executed = true
				block_was_executed == true

			puts "executes the default block 3 times"
				n = 0
					repeater(3)
				n += 1
					n == 3

			puts "executes the default block 10 times"
				n = 0
					repeater(10)
				n += 1
					n == 10
		
		end

	end

end
