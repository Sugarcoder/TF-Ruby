class Calculator

	def add(x, y)     # If you add 2 + 2, it will equal 4.

		x + y

	end
	


	def subtract(x, y)     # If you subtract 6 - 4, it will equal 2.

		x - y

	end
	


	def sum(numbers)       # The total number from the ones you entered.
 
		numbers.inject(0)  { |total, number| total + number }

	end



# Extra credit Test-Drive bonus:


	def multiply(x, y)      # If you multiply 2 times 2, it will equal 4.

		x * y

	end

	
	def power(x, y)        # 2 power 2 is equal to 4.

		x ** y

	end


	def factorial          

		if x <= 1
			1
		else
			x * factorial (x - 1)


	end

end
