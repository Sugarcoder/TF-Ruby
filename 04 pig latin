class Pig_Latin

	def translate

		puts "translates a word beginning with a vowel"
			s = translate("apple")
			s == "appleay"

		puts "translates a word beginning with a consonant"
			s = translate("banana")
			s == "ananabay"

		puts "translate a word beginning with two consonants"
			s = translate("cherry")
			s == "errychay"

		puts "translates two words"
			s = translate("eat pie")
			s == "eatay iepay"

		puts "translates a word beginning with three consonants"
			translate("three") == "eethray"

		puts "counts 'sch' as a single phoneme"
			s = translate("school")
			s == "oolschay"

		puts "counts 'qu' as a single phoneme"
			s = translate("quiet")
			s == "ietquay"

		puts "translates many words"
			s = translate("the quick brown fox")
			s == "ethay ickquay ownbray oxfay"

		puts "capitalized words are still capitalized"
			s = translate("Sally sells seashells")
			s == "allySay ellssay ellsseashay"

	end

end
